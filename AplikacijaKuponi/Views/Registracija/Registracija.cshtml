@model  AplikacijaKuponi.Korisnik
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8">
    <title>Kuponi</title>
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <meta name="description" content="">
    <meta name="author" content="">
    <!-- Bootstrap styles -->
    <link href="~/Content/assets/css/bootstrap.css" rel="stylesheet" />
    <!-- Customize styles -->
    <link href="~/Content/style.css" rel="stylesheet" />
    <!-- font awesome styles -->
    <link href="~/Content/assets/font-awesome/css/font-awesome.css" rel="stylesheet">
    <!--[if IE 7]>
        <link href="css/font-awesome-ie7.min.css" rel="stylesheet">
    <![endif]-->
    <!--[if lt IE 9]>
        <script src="http://html5shim.googlecode.com/svn/trunk/html5.js"></script>
    <![endif]-->
    <!-- Favicons -->
    <link rel="shortcut icon" href="~/Content/assets/ico/favicon.ico">

    <link href="//netdna.bootstrapcdn.com/bootstrap/3.1.0/css/bootstrap.min.css" rel="stylesheet" id="bootstrap-css">
    <script src="//netdna.bootstrapcdn.com/bootstrap/3.1.0/js/bootstrap.min.js"></script>
    <script src="//code.jquery.com/jquery-1.11.1.min.js"></script>
</head>
<body>

    <!--
    Lower Header Section
    -->
    <div class="container">
        <div id="gototop"> </div>
        <header id="header">
            <div class="row">
                <div class="span4">
                    <h1>
                        <a class="logo" href="@Url.Action("Index","Home")">

                            <img src="~/Content/assets/img/Kuponi.png" alt="bootstrap shop">
                        </a>
                    </h1>
                </div>
                <div class="span4">
                    <div class="offerNoteWrapper">

                    </div>
                </div>

            </div>
        </header>

        <!--
        Navigation Bar Section
        -->
        <div class="navbar">
            <div class="navbar-inner">
                <div class="container">
                    <a data-target=".nav-collapse" data-toggle="collapse" class="btn btn-navbar">
                        <span class="icon-bar"></span>
                        <span class="icon-bar"></span>
                        <span class="icon-bar"></span>
                    </a>
                    <div class="nav-collapse" id="grad">
                        <ul class="nav">
                            <li class=""><a href="@Url.Action("Index","Home")">Početna	</a></li>
                            <li class=""><a href="@Url.Action("PoslovniObjekti", "PoslovniObjekti")"> Poslovni objekti </a></li>
                            <li class=""><a href="@Url.Action("Login", "Login")">Prijava</a></li>
                            <li class=""><a href="@Url.Action("Registracija", "Registracija")">Registracija</a></li>

                        </ul>


                        <div class="container">
                            <div class="row centered-form">
                                <div class="col-xs-12 col-sm-8 col-md-4 col-sm-offset-2 col-md-offset-4">
                                    <div class="panel panel-default">
                                        <div class="panel-heading">
                                            <h3 class="panel-title">Registracija</h3>
                                        </div>
                                        <div class="panel-body">
                                            @using (Html.BeginForm("Registracija", "Registracija", FormMethod.Post))
                                            {
                                                <div class="row">
                                                    <div class="col-xs-6 col-sm-6 col-md-6">
                                                        <div class="form-group">
                                                            @Html.TextBoxFor(a => a.Ime, new { @class = "form-control input-sm", placeholder = "Ime", id = "first_name" })
                                                        </div>
                                                    </div>
                                                    <div class="col-xs-6 col-sm-6 col-md-6">
                                                        <div class="form-group">
                                                            @Html.TextBoxFor(a => a.Prezime, new { @class = "form-control input-sm", placeholder = "Prezime", id = "last_name" })
                                                        </div>
                                                    </div>
                                                </div>
                                                <div class="form-group">
                                                    @Html.TextBoxFor(a => a.Email, new { @class = "form-control input-sm", placeholder = "Email", id = "email" })

                                                </div>
                                                <div class="form-group">
                                                    @Html.TextBoxFor(a => a.Username, new { @class = "form-control input-sm", placeholder = "Username", id = "username" })

                                                </div>
                                                <div class="row">
                                                    <div class="col-xs-6 col-sm-6 col-md-6">
                                                        <div class="form-group">
                                                            @Html.TextBoxFor(a => a.Password, new { @class = "form-control input-sm", placeholder = "Šifra", id = "password" })
                                                        </div>
                                                    </div>
                                                    <div class="col-xs-6 col-sm-6 col-md-6">
                                                        <div class="form-group">
                                                            <input type="password" name="password1" id="password_confirmation" class="form-control input-sm" placeholder="Potvrdi šifru">

                                                        </div>
                                                    </div>
                                                </div>

                                                <input type="submit" value="Registruj se!" class="btn btn-info btn-block">

                                            }
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>

                    </div>
                </div>
            </div>
        </div>

        <!--
        Footer
        -->
        <footer class="footer">
            <div class="row-fluid">
                <h5>O nama</h5>
                <p>
                    Naš sajt vam pomaže da nadjete najbolje ponude po veoma niskim cenama. Sve što je
                    potrebno da uradite je da se registrujete i kliknete na ponudu za koju želite da kupite vaučer.
                    Nakon što evidentiramo Vašu uplatu automatski Vam šaljemo na email adresu Vaučer koji ste kupili.
                    Preostaje Vam još da odštampate Vaš vaučer i iskoristite ga u roku koji je naveden u ponudi.
                </p><br>
                <h5>Kontakt</h5>
                <p>021/568-478</p>
                <p>065/777-444</p>

            </div>
        </footer>
    </div><!-- /container -->

    <div class="copyright">
        <div class="container">
            <p class="pull-right">
                <a href="#"><img src="~/Content/assets/img/maestro.png" alt="payment"></a>
                <a href="#"><img src="~/Content/assets/img/mc.png" alt="payment"></a>
                <a href="#"><img src="~/Content/assets/img/pp.png" alt="payment"></a>
                <a href="#"><img src="~/Content/assets/img/visa.png" alt="payment"></a>
                <a href="#"><img src="~/Content/assets/img/disc.png" alt="payment"></a>
            </p>

        </div>
    </div>
    <a href="#" class="gotop"><i class="icon-double-angle-up"></i></a>

    <script src="~/Content/assets/js/jquery.js"></script>
    <script src="~/Content/assets/js/bootstrap.min.js"></script>
    <script src="~/Content/assets/js/jquery.easing-1.3.min.js"></script>
    <script src="~/Content/assets/js/jquery.scrollTo-1.4.3.1-min.js"></script>
    <script src="~/Content/assets/js/shop.js"></script>
</body>
</html>